---
// Contact.astro
import DualCircleLoader from "./DualCircleLoader.astro";
const serviceId = import.meta.env.PUBLIC_EMAILJS_SERVICE_ID;
const templateId = import.meta.env.PUBLIC_EMAILJS_TEMPLATE_ID;
const publicKey = import.meta.env.PUBLIC_EMAILJS_PUBLIC_KEY;
---
<section id="contact" class="animate-fade-in-up py-20 px-4 dark:bg-gray-900 dark:text-white text-black">
  <h2 class="text-4xl font-bold text-center">Get In Touch</h2>
  <div class="w-20 h-1 bg-gradient-to-r from-blue-600 to-purple-600 mx-auto mt-2 rounded-full"></div>

  <div class="mt-12 grid grid-cols-1 md:grid-cols-2 gap-8 max-w-5xl mx-auto">
    <!-- Left: Contact Info -->
    <div class="relative">
      <div class="absolute inset-0 bg-gradient-to-br from-blue-600/10 to-purple-600/10 rounded-2xl blur-xl"></div>
      <div class="relative dark:bg-gray-800/50 dark:backdrop-blur-sm p-8 rounded-2xl dark:border border-gray-700/50 shadow-2xl bg-[#f7f8f9]">
        <h3 class="text-3xl font-bold mb-4 bg-gradient-to-r from-blue-400 to-purple-400 bg-clip-text text-transparent">Let's Connect</h3>
        <p class="dark:text-gray-300 text-[#4c5664] mb-8 leading-relaxed">
          I'm always open to connecting with fellow developers, collaborators, or anyone who shares an interest in tech. Feel free to reach out — whether it’s about a project or just to say hi!
        </p>
        <div class="space-y-6">
          <!-- email -->
          <div class="group flex items-center dark:bg-gradient-to-r from-gray-800 to-gray-700 p-5 rounded-xl border border-gray-600/30 hover:border-purple-500/50 transition-all duration-300 hover:scale-105 hover:shadow-lg hover:shadow-purple-500/10">
            <div class="bg-gradient-to-br from-purple-500 to-purple-700 p-3 rounded-xl mr-5 group-hover:from-purple-400 group-hover:to-purple-600 transition-all duration-300 shadow-lg">
              <i data-lucide="mail" class="text-white w-6 h-6"></i>
            </div>
            <div>
              <p class="font-bold text-lg group-hover:text-purple-300 transition-colors duration-300">Email</p>
              <!-- <p class="text-gray-400 group-hover:text-gray-300 transition-colors duration-300 font-medium">taiga@example.com</p> -->
            </div>
            <div class="ml-auto opacity-0 group-hover:opacity-100 transition-opacity duration-300">
              <i data-lucide="arrow-right" class="text-purple-400 w-5 h-5"></i>
            </div>
          </div>
          <!-- github -->
          <a href="https://github.com/kopo-k" target="_blank" rel="noopener noreferrer" class="block">
            <div class="group flex items-center dark:bg-gradient-to-r from-gray-800 to-gray-700 p-5 rounded-xl border border-gray-600/30 hover:border-pink-500/50 transition-all duration-300 hover:scale-105 hover:shadow-lg hover:shadow-pink-500/10">
              <div class="bg-gradient-to-br from-pink-500 to-pink-700 p-3 rounded-xl mr-5 group-hover:from-pink-400 group-hover:to-pink-600 transition-all duration-300 shadow-lg">
                <i data-lucide="github" class="text-white w-6 h-6"></i>
              </div>
              <div>
                <p class="font-bold text-lg group-hover:text-pink-300 transition-colors duration-300">GitHub</p>
                <p class="text-gray-400 group-hover:text-gray-300 transition-colors duration-300 font-medium">github.com/kopo-k</p>
              </div>
              <div class="ml-auto opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                <i data-lucide="arrow-right" class="text-pink-400 w-5 h-5"></i>
              </div>
            </div>
          </a>
          <!-- twitter -->
          <a href="https://x.com/dshdh364192" target="_blank" rel="noopener noreferrer" class="block">
            <div class="group flex items-center dark:bg-gradient-to-r from-gray-800 to-gray-700 p-5 rounded-xl border border-gray-600/30 hover:border-blue-500/50 transition-all duration-300 hover:scale-105 hover:shadow-lg hover:shadow-blue-500/10">
              <div class="bg-gradient-to-br from-blue-500 to-blue-700 p-3 rounded-xl mr-5 group-hover:from-blue-400 group-hover:to-blue-600 transition-all duration-300 shadow-lg">
                <i data-lucide="twitter" class="text-white w-6 h-6"></i>
              </div>
              <div>
                <p class="font-bold text-lg group-hover:text-blue-300 transition-colors duration-300">X(Twitter)</p>
                <p class="text-gray-400 group-hover:text-gray-300 transition-colors duration-300 font-medium">@kopo-k</p>
              </div>
              <div class="ml-auto opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                <i data-lucide="arrow-right" class="text-blue-400 w-5 h-5"></i>
              </div>
            </div>
          </a>
        </div>
      </div>
    </div>

    <!-- Right: Contact Form -->
    <div class="relative h-full">
      <div class="absolute inset-0 bg-gradient-to-br from-blue-600/10 to-purple-600/10 rounded-2xl blur-xl"></div>
      <div class="relative dark:bg-gray-800/50 dark:backdrop-blur-sm p-8 rounded-2xl dark:border border-gray-700/50 shadow-2xl bg-[#f7f8f9] h-full flex flex-col">
        <h3 class="text-2xl font-semibold mb-2 group-hover:text-blue-600 transition-colors duration-300 bg-gradient-to-r from-blue-400 to-purple-400 bg-clip-text text-transparent text-3xl">Send a Message</h3>
        <p class="dark:text-gray-300 text-[#4c5664] mb-6">Fill out the form below and I'll get back to you soon</p>
        <form id="contact-form" class="space-y-4 flex-grow flex flex-col relative">
          <div id="loader" class="hidden absolute inset-0 flex items-center justify-center bg-white/70 dark:bg-gray-900/70 z-50">
            <DualCircleLoader />
          </div>
          <input name="user_name" type="text" placeholder="Your Name" required class="w-full p-3 rounded-md text-black dark:text-white placeholder-gray-400 outline-none dark:bg-gray-700 bg-white border border-gray-400 focus:border-blue-500 focus:ring-blue-500 focus-visible:ring-offset-2 focus-visible:ring-2 dark:focus-visible:ring-offset-gray-700" />
          <input name="user_email" type="email" placeholder="Your Email" required class="w-full p-3 rounded-md text-black dark:text-white placeholder-gray-400 outline-none dark:bg-gray-700 bg-white border border-gray-400 focus:border-blue-500 focus:ring-blue-500 focus-visible:ring-offset-2 focus-visible:ring-2 dark:focus-visible:ring-offset-gray-700" />
          <textarea name="message" rows="4" placeholder="Your Message" required class="w-full p-3 rounded-md text-black dark:text-white placeholder-gray-400 outline-none dark:bg-gray-700 bg-white border border-gray-400 focus:border-blue-500 focus:ring-blue-500 focus-visible:ring-offset-2 focus-visible:ring-2 flex-grow dark:focus-visible:ring-offset-gray-700"></textarea>
          <button type="submit" class="w-full py-3 bg-gradient-to-r from-blue-600 to-purple-600 text-white font-semibold rounded-md hover:opacity-90 transition">Send Message →</button>
        </form>
      </div>
    </div>
  </div>

  <!-- Lucide Icons -->
  <script src="https://unpkg.com/lucide@latest"></script>
  <script is:inline>
    window.onload = () => {
      if (window.lucide) window.lucide.createIcons();
    };
  </script>

  <!-- EmailJS Integration -->
  <script src="https://cdn.jsdelivr.net/npm/emailjs-com@3/dist/email.min.js"></script>
  
  <script define:vars={{ serviceId, templateId, publicKey }}>

    window.addEventListener("DOMContentLoaded", () => {
      emailjs.init(publicKey);
      const form = document.getElementById("contact-form");
      const loader = document.getElementById("loader");
      form.addEventListener("submit", (e) => {
        e.preventDefault();
        loader.classList.remove("hidden");
        emailjs.sendForm(serviceId, templateId, form).then(() => {
          alert("Message sent successfully!");
          form.reset();
        }, (error) => {
          alert("Failed to send message: " + error.text);
        }).finally(() => {
          loader.classList.add("hidden");
        });
      });
    });
  </script>
</section>
