---
const experienceItems = [
  {
    title: "Department of Information Science",
    org: "Aichi Institute of Technology",
    period: "2024.4 - Present",
    details: [
      "Studying Java programming, C programming",
      "Passed the Fundamental Information Technology Engineer Examination (FE) in May 2023 during my final year of high school"
    ],
  },
  {
    title: "GEEKCAMP Hackathon Vol.19",
    org: "Supporterz Inc.",
    period: "2024.12",
    details: [
      "Joined individually and formed a team with first-time collaborators",
      "Built a working prototype in just two days using React for the frontend",
      "Took charge of frontend development and gained hands-on experience in team-based software development",
    ],
  },
  {
  title: "Member of a Student Engineering Community",
  org: "MaTech",
  period: "2025.5 - Present",
  details: [
      "Joined MaTech, a student-run engineering community with around 20 members",
      "Participate in weekly presentation sessions to share what we've learned",
      "Engage in hackathons, study groups, and meetups through platforms like connpass",
      "Improving communication and collaboration skills through team-based activities"
    ],
  },

  {
    title: "U-22 Programming Contest Project",
    org: "Supported by IPA Japan",
    period: "June 2025 – Present",
    details: [
      "Developing a cross-platform desktop application using React, Electron, and TypeScript",
      "Focusing on intuitive UI/UX and efficient clipboard data management",
      "Aiming to submit the final product to the U-22 Programming Contest in summer 2025"
    ]
  }

];
---

<section
  id="experience"
  class="animate-fade-in-up py-32 min-h-screen bg-gradient-to-b from-white via-slate-50 to-white dark:from-gray-900 dark:via-gray-800 dark:to-gray-900 text-gray-900 dark:text-white scroll-mt-24 transition-colors duration-300"
>
  <div class="container mx-auto px-4">
    <h2 class="text-3xl font-bold text-center mb-12">
      Experience
      <div class="w-20 h-1 mt-2 mx-auto bg-gradient-to-r from-[#2563EB] to-[#9333EA] rounded-full"></div>
    </h2>

    <div class="relative max-w-5xl mx-auto">
      <!-- 中央縦線（常に表示） -->
      <div class="absolute left-1/2 transform -translate-x-1/2 w-1 h-full bg-gradient-to-b from-[#2563EB] to-[#9333EA] z-0"></div>

      <div class="space-y-32 relative z-10">
        {experienceItems.map((exp, i) => (
          <div class={`relative flex flex-col md:flex-row items-center ${i % 2 === 0 ? '' : 'md:flex-row-reverse'}`}>

            <!-- カード -->
            <div class="w-full md:w-1/2 px-4">
              <div class="dark:bg-gray-800 bg-white rounded-lg p-6 shadow-lg">
                <h3 class="text-lg font-semibold">{exp.title}</h3>
                <p class="text-blue-400 text-sm mb-1">{exp.org}</p>
                <p class="text-gray-400 text-sm mb-4">{exp.period}</p>
                <ul class="list-disc list-inside text-sm space-y-1 text-[#4b5563] dark:text-gray-300 marker:text-blue-500">
                  {exp.details.map(d => <li>{d}</li>)}
                </ul>
              </div>
            </div>

            <!-- タイムラインノード -->
            <div class="hidden md:block absolute md:left-1/2 md:top-1/2 md:-translate-x-1/2 md:-translate-y-1/2 md:z-10">
              <div class="w-4 h-4 rounded-full bg-gradient-to-br from-[#2563EB] to-[#9333EA] border-4 border-white dark:border-gray-900"></div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>
