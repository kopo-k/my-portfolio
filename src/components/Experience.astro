---
const experienceItems = [
  {
    title: "Department of Information Science",
    org: "Tsuda University",
    period: "2024.4 - Present",
    details: [
      "Studying Java programming, Object-Oriented Programming, Linear Algebra",
      "Learning fundamental computer science concepts"
    ],
  },
  {
    title: "DX Team Internship Program",
    org: "JTP Corporation",
    period: "2024.8 - 2025.8",
    details: [
      "Created customer-facing introduction videos about RAG and file search technologies",
      "Collaborated with team members on projects",
      "Gained insights into the IT industry"
    ],
  },
  {
    title: "WaffleCollege Tech Career Course",
    org: "NPO Waffle",
    period: "2024.9 - 2025.1",
    details: [
      "Led team development and won the Best Award at the graduation hackathon"
    ],
  },
  {
    title: "GCI 2025 Summer Program Participant",
    org: "Matsuo–Iwazawa Laboratory, University of Tokyo",
    period: "2025.5",
    details: [
      "Participated in advanced computer science research program"
    ],
  },
];
---

<section id="experience" class="py-32 min-h-screen bg-gray-900 text-white scroll-mt-24">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl font-bold text-center mb-12">
      Experience
      <div class="w-20 h-1 mt-2 mx-auto bg-gradient-to-r from-[#2563EB] to-[#9333EA] rounded-full"></div>
    </h2>

    <div class="relative max-w-5xl mx-auto">
      <!-- 中央縦線 -->
      <div class="absolute left-1/2 transform -translate-x-1/2 w-0.5 h-full bg-gradient-to-b from-[#2563EB] to-[#9333EA]"></div>
    
      <div class="space-y-32 relative">
        {experienceItems.map((exp, i) => (
          <div class={`relative flex items-center ${i % 2 === 0 ? '' : 'flex-row-reverse'}`}>
            
            {/* 内容カード */}
            <div class="w-1/2 px-4">
              <div class="bg-gray-800 rounded-lg p-6 shadow-lg">
                <h3 class="text-lg font-semibold">{exp.title}</h3>
                <p class="text-blue-400 text-sm mb-1">{exp.org}</p>
                <p class="text-gray-400 text-sm mb-4">{exp.period}</p>
                <ul class="list-disc list-inside text-sm space-y-1 text-gray-300">
                  {exp.details.map(d => <li>{d}</li>)}
                </ul>
              </div>
            </div>
    
            {/* タイムラインノードを線の上に絶対配置 */}
            <div class="absolute left-1/2 top-1/2 transform -translate-x-1/2 -translate-y-1/2 z-10">
              <div class="w-4 h-4 rounded-full bg-gradient-to-br from-[#2563EB] to-[#9333EA] border-4 border-gray-900"></div>
            </div>
          </div>
        ))}
      </div>
    </div>
    
  </div>
</section>
