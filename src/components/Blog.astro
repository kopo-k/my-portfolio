---
// BlogSection.astro
import { BookOpen, ExternalLink } from "lucide-astro";
import TechBlog from "./Blog/TechBlog.astro";
import Zenn from "./Blog/Zenn.astro";
import Qiita from "./Blog/Qiita.astro";
---

<section
  id="blog"
  class="animate-fade-in-up py-20 px-4
         bg-gradient-to-b from-white via-slate-50 to-white
         dark:bg-gradient-to-b dark:from-gray-900 dark:via-gray-800 dark:to-gray-900
         text-gray-900 dark:text-white
         transition-colors duration-300"
>
  <h2 class="text-4xl font-bold text-center" data-translate="blog.title">Blog & Articles</h2>
  <div class="w-20 h-1 bg-gradient-to-r from-blue-600 to-purple-600 mx-auto mt-2 rounded-full"></div>

  <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mt-12">
    <!-- Tech Blog -->
    <TechBlog />
    <!-- Zenn -->
    <Zenn />
    <!-- Qiita -->
    <Qiita />
  </div>
</section>
