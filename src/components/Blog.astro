---
// BlogSection.astro
---

<section id="blog" class="py-20 px-4 bg-gray-900 text-white ">
  <h2 class="text-4xl font-bold text-center">Blog & Articles</h2>
  <div class="w-20 h-1 bg-gradient-to-r from-blue-600 to-purple-600 mx-auto mt-2 rounded-full"></div>

  <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mt-12">
    <!-- Tech Blog Card -->
    <div class="bg-[#1f2937] p-6 rounded-lg shadow-md">
      <div class="bg-blue-600 w-12 h-12 flex items-center justify-center rounded-xl mb-4">
        <i data-lucide="book-open" class="w-6 h-6 text-white"></i>
      </div>
      <h3 class="text-xl font-bold mb-1">Tech Blog</h3>
      <p class="text-gray-300 mb-4">Personal blog where I share my learning journey and technical insights</p>
      <a href="#" class="flex items-center justify-center w-full py-2 rounded-md text-white bg-gradient-to-r from-blue-500 to-purple-500 hover:opacity-90 transition">
        <i data-lucide="external-link" class="w-4 h-4 mr-2 transition-transform duration-300"></i>
        Visit Tech Blog
      </a>
    </div>

    <!-- Zenn Card -->
    <div class="bg-[#1f2937] p-6 rounded-lg shadow-md">
      <div class="bg-green-600 w-12 h-12 flex items-center justify-center rounded-xl mb-4">
        <i data-lucide="book-open" class="w-6 h-6 text-white"></i>
      </div>
      <h3 class="text-xl font-bold mb-1">Zenn</h3>
      <p class="text-gray-300 mb-4">Technical articles and tutorials on modern web development</p>
      <a href="#" class="flex items-center justify-center w-full py-2 rounded-md text-white bg-gradient-to-r from-green-500 to-blue-500 hover:opacity-90 transition">
        <i data-lucide="external-link" class="w-4 h-4 mr-2 transition-transform duration-300"></i>
        Visit Zenn
      </a>
    </div>

    <!-- Qiita Card -->
    <div class="bg-[#1f2937] p-6 rounded-lg shadow-md">
      <div class="bg-red-600 w-12 h-12 flex items-center justify-center rounded-xl mb-4">
        <i data-lucide="book-open" class="w-6 h-6 text-white"></i>
      </div>
      <h3 class="text-xl font-bold mb-1">Qiita</h3>
      <p class="text-gray-300 mb-4">Programming tips and solutions to common development challenges</p>
      <a href="#" class="flex items-center justify-center w-full py-2 rounded-md text-white bg-gradient-to-r from-red-500 to-orange-500 hover:opacity-90 transition">
        <i data-lucide="external-link" class="w-4 h-4 mr-2 transition-transform duration-300"></i>
        Visit Qiita
      </a>
    </div>
  </div>

  <!-- Lucide Icon CDN -->
  <script src="https://unpkg.com/lucide@latest"></script>
  <script is:inline>
    document.addEventListener("DOMContentLoaded", () => {
      if (window.lucide) window.lucide.createIcons();
    });
  </script>
</section>
