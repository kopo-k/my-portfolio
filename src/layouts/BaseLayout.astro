---
import "../styles/global.css";
---

<html lang="ja" class="dark scroll-smooth">
  <head>
    <meta charset="UTF-8" /> <!--文字化け対策-->
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script>
      if (
        localStorage.theme === 'dark' ||
        (!('theme' in localStorage) && window.matchMedia('(prefers-color-scheme: dark)').matches)
      ) {
        document.documentElement.classList.add('dark');
      } else {
        document.documentElement.classList.remove('dark');
      }
    </script>
    
    <slot name="head" />
  </head>
  <body class="bg-white text-black dark:bg-gray-900 dark:text-white">
    <slot />
    <script src="/js/themeToggle.js" type="module"></script>
    <script is:inline>
      window.addEventListener("DOMContentLoaded", () => {
        import('/js/themeToggle.js').then(mod => {
          mod.initThemeToggle();
        });
      });
    </script>
    
  </body>
</html>
